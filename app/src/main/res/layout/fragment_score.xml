    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_hard_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/roboto"
        app:layout_constraintBottom_toTopOf="@+id/topLine3"
        app:layout_constraintEnd_toStartOf="@+id/rightHeaderHard"
        app:layout_constraintStart_toStartOf="@+id/leftHeaderRight"
        app:layout_constraintTop_toTopOf="@+id/topLine2" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/score_hard_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/roboto"
        app:layout_constraintBottom_toTopOf="@+id/topHome"
        app:layout_constraintEnd_toStartOf="@+id/rightHeaderHard"
        app:layout_constraintStart_toStartOf="@+id/leftHeaderRight"
        app:layout_constraintTop_toTopOf="@+id/topLine3" />

</android.support.constraint.ConstraintLayout>